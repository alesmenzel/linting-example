{
  "name": "linting-example",
  "version": "1.0.0",
  "description": "Linting example with airbnb, eslint, prettier, husky and lint-staged",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./src",
    "format": "eslint --fix ./src",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alesmenzel/linting-example.git"
  },
  "keywords": [
    "linting",
    "airbnb",
    "eslint",
    "prettier",
    "husky",
    "lint-staged"
  ],
  "author": "Ale≈° Menzel <alesmenzel@gmail.com> (https://github.com/alesmenzel)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alesmenzel/linting-example/issues"
  },
  "homepage": "https://github.com/alesmenzel/linting-example#readme",
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^2.4.1",
    "lint-staged": "^13.1.0",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
